{
  "include": ["src/**/*", "tests/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vitest/globals"], // Optional: for Vitest globals like `describe`, `it`
    "allowJs": true, // If you have JS files
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
